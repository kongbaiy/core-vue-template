{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@config/typescript/tsconfig.app.json",
    "@config/typescript/tsconfig.node.json",
    "@config/typescript/base.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "files": [],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.txs",
    "src/**/*.vue",
    "../../types/**/*.ts"
  ]
}
